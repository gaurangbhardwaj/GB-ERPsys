@model IEnumerable<LFTERPsys.Models.CalendarModel>

@{
    ViewBag.Title = "Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/CalendarStyle")
<link href="~/Content/HomeCss/CalendarCss/fullcalendar.print.css" rel="stylesheet" media="print" />

<h3 style="text-align:center">Logic Fruit Calendar</h3>

<div id="calender"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title"><span id="eventTitle"></span></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button id="btnEdit" class="btn btn-success btn-sm pull-right" style="margin-right:5px;">
                    Edit
                </button>
                <button id="btnDelete" class="btn btn-danger btn-sm pull-right">
                    Remove
                </button>
            </div>
        </div>
    </div>
</div>


<div id="myModalSave" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add/Edit Event</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form class="col-md-12 form-horizontal">
                    <input type="hidden" id="hdEventID" value="0" />
                    <div class="form-group">
                        <label>Subject</label>
                        <input type="text" id="txtSubject" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Start</label>
                        <div class="input-group date" id="dtp1">
                            <input type="text" id="txtStart" class="form-control" />
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                     <div class="form-group">
                            <div class="checkbox">
            <label><input type="checkbox" id="chkIsFullDay" checked="checked" />  Is Full Day event</label>
        </div>
    </div>
                    <div class="form-group" id="divEndDate" style="display:none">
                        <label>End</label>
                        <div class="input-group date" id="dtp2">
                            <input type="text" id="txtEnd" class="form-control" />
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea id="txtDescription" rows="3" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Theme Color</label>
                        <select id="ddThemeColor" class="form-control">
                            <option value="">Default</option>
                            <option value="#ff9907">Red</option>
                            <option value="#ffc0cb">Pink</option>
                            <option value="#bad0f6">Blue</option>
                            <option value="#28a788">Green</option>
                        </select>
                    </div>
                    <button type="button" id="btnSave" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/LofruCalendarScripts/moment.min.js"></script>
    @Scripts.Render("~/bundles/Calendar")

}
