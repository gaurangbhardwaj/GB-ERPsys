@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        .purple-gradient-rgba {
            background: -webkit-linear-gradient(50deg,rgba(255,110,196,.9),rgba(120,115,245,.9)) !important;
            background: -o-linear-gradient(50deg,rgba(255,110,196,.9),rgba(120,115,245,.9)) !important;
            background: linear-gradient(40deg,rgba(255,110,196,.9),rgba(120,115,245,.9)) !important;
        }

        .body-content {
            margin: 0px;
            margin-top: 15px;
            padding: 0px 0px;
        }

        .body {
            padding: 0px 0px;
        }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card gradient-card" style="border:none; ">
        <div class="card-image" style="background-image: url(/Images/fleximage.jpg)">
            <!-- Content -->
            <div class="text-white d-flex mask purple-gradient-rgba">
                <div class="first-content mx-auto p-4">
                    <h2 class="card-title">@ViewBag.Title</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row" style="padding-top:2em">
            <div class="col-md-3"></div>
            <div class="col-sm-2 text-nowrap">
                <p class="control-label col-md-2">Employee ID</p>
            </div>
            <div class="col-sm-4">
                <input name="empid" class="input-validation-error form-control" id="password" type="text" value="@ViewBag.SessionID" disabled>
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="row" style="padding-top:2em">
            <div class="col-md-3"></div>
            <div class="col-sm-2 text-nowrap">
                <p class="control-label col-md-2">New Password</p>
            </div>
            <div class="col-sm-4">
                <input name="newpassword" class="input-validation-error form-control" id="password" type="password" placeholder="-- New Password --"
                       data-val-required="Password field is required" data-val="true" data-val-regex-pattern="^((?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])|(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[^a-zA-Z0-9])|(?=.*?[A-Z])(?=.*?[0-9])(?=.*?[^a-zA-Z0-9])|(?=.*?[a-z])(?=.*?[0-9])(?=.*?[^a-zA-Z0-9])).{8,}$"
                       data-val-regex="Must be at least 8 characters with mixed Upper,  Lower, Numeric and Special characters (#$%^)."
                       data-val-length-min="8" data-val-length-max="20" data-val-length="Password must be in legth between 8-20." data-toggle="newpassword">
                <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="newpassword"></span>
               

            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="row" style="padding-top:2em">
            <div class="col-md-3"></div>
            <div class="col-sm-2 text-nowrap">
                <p class="control-label col-md-2">Confirm Password</p>
            </div>
            <div class="col-sm-4">
                <input name="confirmpassword" class="input-validation-error form-control" id="confirmpassword" aria-invalid="false" placeholder="-- Retype Password --" data-val-required="Confirm Password field is required"
                       aria-describedby="confirmpassword-error" type="password" data-val="true" data-val-equalto-other="newpassword" data-val-equalto="Password do not match">
                <span class="text-danger field-validation-valid" data-valmsg-for="confirmpassword" data-valmsg-replace="true"></span>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="form-actions h4 text-center" style="padding-top:1em">
            <a class="badge badge-pill badge-success" onclick="document.getElementById('SubmitQuery').click();" style="cursor:pointer; color:white">Change</a>
            <input type="submit" id="SubmitQuery" style="display:none" class="float-right">
            <a href="/Home/Home/@ViewBag.SessionID" class="badge badge-pill badge-danger">Cancel</a>
        </div>
    </div>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}